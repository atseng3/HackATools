<div class="row">
	<div class="col-md-3">
		<%= image_tag @product.image_url %>
		<p>
		  <strong>Name:</strong>
		  <%= @product.name %>
		</p>

		<p>
		  <strong>Website:</strong>
		  <%= @product.website %>
		</p>

		<p>
		  <strong>Description:</strong>
		  <%= @product.description %>
		</p>
	</div>
	<div class="col-md-9">
		<% if @reviews.blank? %>
			<h3>No reviews yet. Be the first one to write one!</h3>
		<% else %>
			<table class="table">
				<thead>
				  <tr>
				    <th class="col-md-3"></th>
				    <th class="col-md-9"></th>
				  </tr>
				</thead>
				<tbody>
					<% @reviews.each do |review| %>
						<tr>
							<td>
								<h4>
								  <%= "#{review.user.email}" %>
								</h4>
								<p><%= review.created_at.strftime('%-m/%-d/%-y') %></p>
							</td>
							<td>
								<div class="star-rating" data-score=<%= review.rating %>></div>
								<p><%= h(review.comment).gsub(/\n/, '<br/>').html_safe %></p>
								<% if user_signed_in? %>
									<% if (review.user == current_user) || (current_user.admin?) %>
										<%= link_to 'Edit', edit_product_review_path(@product, review) %>
										<%= link_to 'Delete', product_review_path(@product, review), method: :delete %>
										<% end %>
								<% end %>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		<% end %>
	</div>
</div>


<%= link_to "Write Review", new_product_review_path(@product), class: "btn btn-primary" %>
<%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-link' %> |
<%= link_to 'Back', products_path, class: 'btn btn-link' %>


<script>
	$('.star-rating').raty({
		path: 'https://s3.amazonaws.com/hackatools/stars',
		readOnly: true,
		score: function() {
			return $(this).attr('data-score');
		}
	});
</script>
