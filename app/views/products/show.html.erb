<div class="row">
	<div class="col-md-3">
		<%= image_tag @product.image_url %>
		<p>
		  <strong>Name:</strong>
		  <%= @product.name %>
		</p>

		<p>
		  <strong>Website:</strong>
		  <%= @product.website %>
		</p>

		<p>
		  <strong>Description:</strong>
		  <%= @product.description %>
		</p>
	</div>
	<div class="col-md-9">
	</div>
</div>



<%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-link' %> |
<%= link_to 'Back', products_path, class: 'btn btn-link' %>
