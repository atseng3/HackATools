<div class="product-hdr">
	<a href=<%= @product.website %> class="item">
		<div class="item__logo">
			<%= image_tag @product.image_url %>
		</div>
	</a>
	
	<p class="product__description"><%= @product.description %></p>
	<div class="col-md-6">
		Ease of becoming master at <%= @product.name %>: 
		<div class="star-rating" data-score= <%= @avg_rating %> ></div>
	</div>
	<div class="col-md-6">
		Speed for producing awesomeness: 
		<div class="star-rating" data-score= <%= @avg_rating %> ></div>
	</div>
	<div class="product-rating">
		Overall Rating: 
		<div class="star-rating" data-score= <%= @avg_rating %> ></div>
		   <%= "#{@reviews.length} reviews" %>
	</div>
</div>

<div class="container-fluid">
<div class="row hidden">
	<%= link_to "Write Review", new_product_review_path(@product), class: "btn btn-primary" %>
	<%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-link' %> |
	<%= link_to 'Back', products_path, class: 'btn btn-link' %>
</div>

