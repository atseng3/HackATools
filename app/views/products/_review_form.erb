<h2>Used Heroku for a project? Leave your comments and help others out:</h2>

<%= form_for([@product, @review]) do |f| %>
  <% if @review.errors.any? %>
    <div id="error_explanation" class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h4>

      <ul>
        <% @review.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>      
    </div>
  <% end %>
  <div class="jumbotron">
    <p>Overall Rating: <div class="new-review__star"></div></p>
    <div class="form-group">
      <%= f.text_area :comment, class: "form-control", id: "html" %>
    </div>
    <div>
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>